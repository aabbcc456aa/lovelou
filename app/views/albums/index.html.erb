<ul class="page-header breadcrumb menu clearfix">
  <li class="first last active">
    <a href="/albums">相册</a>
  </li>
</ul>

<div class="sidebar">
  <div class="box">
    <h2><%= t("users.already_have_account")%></h2>
    <p style="line-height:20px;">
<%#= render :partial => "devise/shared/links" %>
    </p>
  </div>
</div>

<div class="content">
  <div class="box">
    <%= link_to "我的相册" ,albums_path() , :class => "btn primary"%>
    <%= link_to "好友相册" ,albums_path() , :class => "btn primary"%>
    <%= link_to "最近上传" ,albums_path() , :class => "btn primary"%>
    <%= link_to "热门相册" ,albums_path() , :class => "btn primary"%>
    <%= link_to "新建相册" ,new_album_path(), :remote => true %>
  </div>
  
  <div>
    <% @albums.each do |album| %>
    <div id="out_list_ablum">
      <div class="list_album">
        <% if album.permiss == Common::QUESTION_PERMISS || album.permiss == Common::PASS_PERMISS %>
           <%= link_to image_tag("/assets/need_pass.png"),validate_album_path(album) ,:remote => true  %>
        <% elsif album.photos.size == 0 %>
           <%= link_to image_tag("/assets/no_photo_s.png"),album_path(album)  %>
         <% elsif album.front_photo_id.blank? %>
            <%= link_to image_tag(album.first_photo),album_path(album) %>
        <% else %>
            <%= link_to image_tag(album.front_photo),album_path(album) %>
        <% end %>
        <div id="album_name"><%= album.name %></div>
        <div>共<%= album.photos.size %>张</div>
        
      </div>
      </div>
    <% end %>
  </div>
</div>



<!-- 新建相册 dialog 使用 -->
<div id="dialog_form" style="display :none">
</div>


<style>
  #album_name{
    padding-top: 5px;
}
  #out_list_ablum{
    float: left;
    width: 175px;
}
  .list_album{
    float:left;
    height: 140px;
    padding: 7px 5px 5px 5px;
    text-align: center;
    width: 140px;
    border: #909090 1px solid;
    
}
.list_album  img{
  height : 135px;
  width : 135px;
}
</style>