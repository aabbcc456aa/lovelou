
<div class="content">
  <div class="box">
    <%= form_for @photo, :url=> new_photo_path, :remote => true, :html => {:method => :post, :multipart => true}  do |f| %>
      <%= f.hidden_field :album_id ,:value => @album_id %>
      <fieldset>
        <div id="error_messages"><%= render "shared/error_messages", :target => @photo %></div>
        <div class="clearfix"><%= f.label "图片名：" %>
          <div class="input"> <%= f.text_field :name %> <%= input_require %></div>
        </div>
        <div class="clearfix"><%= f.label "描述：" %>
          <div class="input"> <%= f.text_area :descript, :rows=>3 %> </div>
        </div>
        <div class="clearfix">
          <%= f.label "地址 : " %>
          <div class="input"><%= f.file_field :url %> </div>
        </div>
        <% if @photo.url.present? %>
          <div class="clearfix"><%= f.label "图片 ：" %>
            <div class="input"> <%= image_tag(@photo.url_url(:thumb))  %></div>
          </div>
    <%#= f.hidden_field :url_cache %>
          <div class="clearfix"><%= f.label "删除图片 ：" %>
            <div class="input"> <%=  f.check_box :remove_url %> </div>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "提交", :class => "btn primary" %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>